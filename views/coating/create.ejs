<head>
  <% include ../header.ejs %> 

</head>

<div class="container-fluid">
    <div class=row>
      <div class="col col-md-12">
        
        <br/>
        <h2>Create a new coating estimate </h2>
        <br/>
        

        <div class="content">
          <div>
            <form name="estimate" method="POST" action="/estimate/save">

              <div class="form-group" id=frm>
                <label for="_id">ID</label>
                <input type="number" class="form-control" id="_id" name="_id" value="" required readonly>
              </div>

              <div class=row>
                <div class="col col-xs-12">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="" required>
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" class="form-control" id="location" name="location" value="">
                    </div>
                    <div class="form-group">
                        <label for="squareFeet">Square Feet</label>
                        <input onchange="onEstimateChange()" type="number" class="form-control" id="squareFeet" name="squareFeet" value=""
                            required>
                    </div>
                </div>
            </div>
            <hr>
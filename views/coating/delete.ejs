<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">
<h2>Confirm deletion of estimate</h2>
<div class="panel panel-default">
  <div class="panel-heading"></div>
  <div class="text-muted pull-right"></div>
  <div class="panel-body" style="color:black; background-color:white">
      <table>
          <tr>
            <td> ID:</td>
        <td> <%=  coating._id %> </td>
          </tr>
          <tr>
           <td> Name: </td>
          <td> <%=coating.name%></td>
          </tr>
          <tr>
            <td> location:</td>
            <td> <%=coating.location%></td>
          </tr>
          <tr>
              <td> squareFeet (area):</td>
              <td> <%=coating.squareFeet%></td>
          </tr>
        <br>
        <% for (let j = 0; j < coating.materials.length; j++) { material = coating.materials[j]; %>
          <div>  
             <tr>
              <td>Material <%= j+1 %> name:</td>
          <td>  <%= material.product %> </td>
            </tr>
            <tr>
            <td>Unit Cost:</td>
            <td>  <%= material.unitcost %> </td>
            </tr>
            
            <tr>
            
              <td> coverageSquareFeetPerUnit (Feets):</td>
               <td> <%= material.coversquareFeetSquareFeetPerUnit %></td>
            </tr>
          </div>
        
          <% } %>
        </table>
  </div>
</div>
            <form method="get" action="/coating">
              <input type="submit" value="Return to list" class="btn btn-caution" />
            </form>
            <br>
           

            <form method="POST" action="/coating/delete/<%= coating._id %>" onsubmit="return confirm('Are you sure you want to DELETE this item?');">
              <input type="submit" value="Delete this item" class="btn btn-danger"  />
            </form>
    </div>
  </div>
</div>
